@model IEnumerable<StudentMonitoringSystem.Models.Group>

@{
    ViewBag.Title = "Index";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Faculty.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<h2>Individual Table</h2>
<style>
    .fluid-box {
        display: inline-block;
        border: 1px solid gray;
        vertical-align: top;
        text-align: center;
    }

    .table {
        width: 100%;
    }

    .Mark {
        font-size: 16px;
        display: block;
        text-align: center;
    }

    .mark-point-maxValue {
        color: gray;
        display: inline;
    }

    th, td {
        font-size: 12px;
        border: 1px solid #dddddd;
        text-align: center;
        padding: 6px !important;
    }

    th {
        border-bottom: 3px solid #1BA81D;
    }

    .subName {
        width: 80%;
        margin-left: 10px;
        text-align: left;
        font-size: 24px;
    }

    .table-c {
        overflow: auto;
    }
</style>
<div class="table">
   
    @foreach (var item1 in ViewData["Students"] as ICollection<StudentMonitoringSystem.Models.Student>)
    {
        var flag = 0;
        <div class="table-c">
            <table class="table">
                <tr>
                    <td class="subName"><span>@item1.Name</span></td>


                    @foreach (var point1 in item1.Subjects as ICollection<StudentMonitoringSystem.Models.Subject>)
                    {
                        if (flag == 0)
                        {
                            foreach (var point in point1.Points as ICollection<StudentMonitoringSystem.Models.MarkPoint>) 
                            { 
                        <th>@point.Name 
                    <p class="mark-point-maxValue">
                            (@point.maxValue)</p></th>
                    }
                        }
                        flag = 1;
                    }
                </tr>
                <tr>
                    @foreach (var point2 in item1.Marks as ICollection<StudentMonitoringSystem.Models.Mark>)
                    {
                       

                            <td>@point2.Value</td>
                        
                    }
                </tr>
            </table>
        </div>
        <div class="clearfix"></div>

    }

</div>

